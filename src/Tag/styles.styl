@import "../lib/sharedStyles"

.qmTagContainer
  borders(BASE_BORDER, QUARTER_REM)
  display: block
  padding: times(0.2, REM) HALF_REM

  line-height: 1
  text-transform: uppercase
  font-weight: bold
  font-size: THREE_QUARTER_REM

  &.isGray
    background: rgba(GRAY, 0.15)
    border-color: rgba(GRAY, 0.25)
    color: GRAY

  &.isRed
    background: rgba(RED, 0.15)
    border-color: rgba(RED, 0.25)
    color: RED

  &.isOrange
    background: rgba(ORANGE, 0.15)
    border-color: rgba(ORANGE, 0.25)
    color: ORANGE

  &.isYellow
    background: rgba(YELLOW, 0.15)
    border-color: rgba(YELLOW, 0.25)
    color: YELLOW

  &.isGreen
    background: rgba(GREEN, 0.15)
    border-color: rgba(GREEN, 0.25)
    color: GREEN

  &.isBlue
    background: rgba(BLUE, 0.15)
    border-color: rgba(BLUE, 0.25)
    color: BLUE

  &.isPurple
    background: rgba(PURPLE, 0.15)
    border-color: rgba(PURPLE, 0.25)
    color: PURPLE
