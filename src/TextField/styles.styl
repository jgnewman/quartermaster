@import "../lib/sharedStyles"

.qmCharLimitContainer
  @extend $absFill

  text-align: right
  overflow: hidden

.qmCharLimitText
  color: BASE_FONT
  font-size: 85%

  position: absolute
  right: 0.5rem
  bottom: 8px

  &.isField
    bottom: 50%
    transform: translateY(50%)

  &.worst, &.error
    color: ERRORS

.qmCharLimitBar
  size(100%, 5px)
  borders(0, 0 0 0.25rem 0.25rem)

  position: absolute
  left: 0
  bottom: 0

  display: block
  background: LIGHT_BG
  overflow: hidden

.qmCharLimitBarFill
  size(0, 100%)

  display: block
  position: absolute
  left: 0
  top: 0

  transition: BASE_TRANSITION

  &.empty
    background: transparent

  &.worst
    background: CHAR_WORST

  &.worse
    background: CHAR_WORSE

  &.decent
    background: CHAR_DECENT

  &.better
    background: CHAR_BETTER

  &.best
    background: CHAR_BEST

  &.error
    background: ERRORS


.qmTextFieldInputWrapper
  display: block
  position: relative
  background-attachment: BASE_BG

  &.isDisable .qmCharLimitContainer
    opacity: 0.25

.qmTextFieldLabel
  display: block
  color: BASE_FONT
  font-weight: bold
  padding: 0 0 .33rem 0

.qmTextFieldError
  display: block
  color: ERRORS
  font-size: 75%
  padding: 0.15rem 0 0.33rem

$commonFieldProps
  borders(BASE_BORDER, 0.25rem)

  position: relative
  z-index: 2

  display: block
  margin: 0

  color: BASE_FONT
  background: transparent
  line-height: 1

  width: 100%
  outline: solid transparent !important

  &::placeholder
    color: BASE_PLACEHOLDER

  &.isFocused
    box-shadow: BASE_OUTLINE

  &.isDisabled::placeholder
    color: FADED_FONT

.qmTextFieldInput.isTextArea
  @extend $commonFieldProps

  height: 100px
  padding: 0.66rem 0.75rem
  resize: auto

  &.hasCharLimit
    padding-bottom: 1.75rem

  &.noResize
    resize: none

.qmTextFieldInput.isField
  @extend $commonFieldProps

  padding: 0.1rem 0.75rem
  height: 40px;

