// Compact and non/compact element sizes

LARGER_ELEM_HEIGHT = REM * 3
SMALLER_ELEM_HEIGHT = REM * 2

GUTTER = REM * 1.5
HALF_GUTTER = GUTTER / 2
THIRD_GUTTER = GUTTER / 3

// Useful extensions and and functions

$absFill
  display: block
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

$absCenter
  display: block
  position: absolute
  left: 50%
  top: 50%
  transform: translateX(-50%) translateY(-50%)

$fixFill
  display: block;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;

$vertMiddle
  display: inline-block
  vertical-align: middle

$ellipsisText
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

$dialogBox
  width: 100%
  height: auto

  box-sizing: border-box
  border: BASE_BORDER
  border-radius: QUARTER_REM

  display: block
  position: absolute
  left: 0
  z-index: 3

  overflow: hidden
  background: BASE_BG
  box-shadow: SUBTLE_SHADOW

size(w, h = w)
  width: w
  height: h

borders(b, r = 0)
  box-sizing: border-box
  border: b
  border-radius: r

plus(x, y)
  x + y

minus(x, y)
  x - y

times(x, y)
  x * y

div(x, y)
  x / y

neg(x)
  times(x, -1)
