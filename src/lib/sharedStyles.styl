BASE_FONT_LIGHTER = LIGHTEST_GRAY
BASE_FONT_LIGHTEST = WHITE
BASE_PLACEHOLDER = GRAY

// Misc settings

BASE_BORDER = 1px solid BLACK_FADE_FEATHER
BASE_OUTLINE = 0 0 0 2px HIGHLIGHTS
BASE_TRANSITION = all .2s ease
BLANK_OUTLINE = 0 0 0 transparent
LIFTED_SHADOW = 0 3px 15px BLACK_FADE_FEATHER
