@import "../lib/sharedStyles"

.qmTextContainer
  display: inline-block
  vertical-align: middle
  margin: 0
  padding: 0

  font-size: REM
  font-weight: normal
  line-height: 1.4
  color: BASE_FONT

  &.isBlock
    display: block

  &.isBold
    font-weight: bold

  &.isSmaller
    font-size: SMALLER_FONT

  &.isSmallest
    font-size: SMALLEST_FONT

  &.isUppercase
    text-transform: uppercase

