@import "../lib/sharedStyles"

.qmMenuContainer
  display: block
  background: BASE_BG
  padding: add(REM, QUARTER_REM) 0
  position: relative
  z-index: 3

  &.isCompact
    padding: THREE_QUARTER_REM 0

  &.isLifted
    box-shadow: LIFTED_SHADOW

.qmMenuLabel
  padding-bottom: 0

.qmMenuLink,
.qmMenuSubmenuLink
  display: block
  color: BASE_FONT
  text-decoration: none
  line-height: 1.2
  transition: BASE_TRANSITION

  position: relative

.qmMenuLink:hover,
.qmMenuSubmenuLink.isCollapsible:hover
  color: HIGHLIGHTS
  background-color: BLACK_FADE_MIN

.qmMenuSubmenuLink
  border: 0
  background: transparent
  width: 100%
  padding: 0
  margin: 0
  text-align: left
  overflow: visible
  outline: solid transparent !important

.qmMenuLinkText
  display: block
  max-width: calc(100% - DOUBLE_REM)

.qmMenuSubmenu.qmMenuContainer:not(.isCollapsible)
  padding-top: 0
  padding-bottom: 0
  box-shadow: none
  margin-left: REM

.qmMenuSubmenu.canAnimate
  position: absolute
  width: 100%

  &.isMenuLeft
    right: REM

  &.isMenuRight
    left: REM

  &.isMenuTop
    bottom: 100%

  &.isMenuBottom
    top: 100%

.qmMenuSeparator
  border: 0
  border-bottom: 1px solid BLACK_FADE_FLY

.qmIcon.qmMenuActiveIcon,
.qmIcon.qmMenuSubmenuIcon
  position: absolute
  top: 50%
  right: REM + HALF_REM
  transform: translateY(-50%)

  &.isCompact
    right: REM

.qmMenuSubmenuIcon.isFlipped
  transform: translateY(-50%) rotate(180deg)

.qmIcon.qmMenuActiveIcon
  stroke: ACTIVE
