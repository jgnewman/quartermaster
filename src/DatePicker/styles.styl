@import "../lib/sharedStyles"

.qmDatePickerContainer
  position: relative

.qmDatePickerFieldWrapper
  position: relative

.qmDatePickerOverlay
  @extends $absFill
  z-index: 2

.qmDatePickerDialog
  @extends $dialogBox

  &.isBottom
    top: "calc(100% + %s)" % (QUARTER_REM)

  &.isTop
    bottom: "calc(100% + %s)" % (QUARTER_REM)

.qmDatePickerHeader
  padding: QUARTER_REM

.qmDatePickerTitle
  text-align: center
  vertical-align: middle

.qmDatePickerReset
  margin-left: QUARTER_REM

.qmDatePickerMonthLeftWrapper
  text-align: left

.qmDatePickerMonthRightWrapper
  text-align: right

.qmDatePickerSelectorsWrapper
  display: flex
  justify-content: space-between
  flex-wrap: wrap

.qmDatePickerCalendar
  flex-grow: 10

.qmDatePickerDayTable
  padding: QUARTER_REM
  width: 100%

  border-collapse: separate
  border-spacing: div(QUARTER_REM, 2)

  th, td
    border: 0

.qmDatePickerTHead
  font-size: 90%
  font-weight: BOLD

.qmDatePickerDay,
.qmDatePickerHour
  borders(1px solid transparent, QUARTER_REM)
  outline: solid transparent !important

  display: block
  width: 100%
  background: BLACK_FADE_MIN
  font-size: 90%
  padding: QUARTER_REM
  transition: BASE_TRANSITION

  &:not(.isDisabled):hover
    background: BLACK_FADE_FLY

  &.isToday,
  &:focus
    border-color: HIGHLIGHTS
    box-shadow: inset 0 0 0 1px HIGHLIGHTS

  &.isSelected,
  &.isSelected:hover
    background: HIGHLIGHTS
    color: WHITE

.qmDatePickerTimes
  padding: QUARTER_REM
  text-align: center
  flex-grow: 1

.qmDatePickerTimeTitle
  font-weight: BOLD
  font-size: 90%

.qmDatePickerHours
  display: flex
  flex-wrap: wrap
  flex-flow: column
  max-height: REM * 9.25
  overflow-y: auto

.qmDatePickerHour
  margin: plus(div(QUARTER_REM, 2), 1) auto 0
  min-width: REM * 4

