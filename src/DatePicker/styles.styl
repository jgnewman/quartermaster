@import "../lib/sharedStyles"

.qmDatePickerContainer
  position: relative

.qmDatePickerFieldWrapper
  position: relative

.qmDatePickerField .qmTextFieldInput.isField
  padding-right: REM * 3

.qmDatePickerField.hasValue .qmTextFieldInput.isField
  padding-right: REM * 4.5

.qmDatePickerOverlay
  @extends $absFill
  z-index: 2

.qmDatePickerIcons
  position: absolute
  top: 50%
  right: 0
  transform: translateY(-50%)
  z-index: 2
  display: flex

.qmDatePickerIconWrapper
  position: relative
  padding: 0.5em 0.75em

  &::before
    content: ""
    display: block
    position: absolute
    left: 0
    top: 50%
    width: 1px
    height: 50%
    transform: translateY(-50%)
    background: LIGHTEST_GRAY

.qmIcon.qmDatePickerIcon
  stroke: LIGHTEST_GRAY

  .qmPathIsFilled
    fill: LIGHTEST_GRAY

.qmIcon.qmDatePickerDateIcon:hover
  stroke: HIGHLIGHTS

  .qmPathIsFilled
    fill: HIGHLIGHTS

.qmDatePickerClearButton
  border: 0
  background: transparent
  outline: solid transparent !important
  padding: 0.5em 0.66em

  &:hover .qmDatePickerClearIcon
    stroke: RED

.qmDatePickerDialog
  @extends $dialogBox

  &.isBottom
    top: "calc(100% + %s)" % (QUARTER_REM)

  &.isTop
    bottom: "calc(100% + %s)" % (QUARTER_REM)

.qmDatePickerHeader
  padding: QUARTER_REM

.qmDatePickerTitle
  text-align: center
  font-weight: BOLD

.qmDatePickerReset
  margin-left: QUARTER_REM

.qmDatePickerMonthLeftWrapper
  text-align: left

.qmDatePickerMonthRightWrapper
  text-align: right

.qmDatePickerSelectorsWrapper
  display: flex
  justify-content: space-between
  flex-wrap: wrap

.qmDatePickerCalendar
  flex-grow: 10

.qmDatePickerDayTable
  padding: QUARTER_REM
  width: 100%

  border-collapse: separate
  border-spacing: div(QUARTER_REM, 2)

  th, td
    border: 0

.qmDatePickerDay,
.qmDatePickerHour
  borders(1px solid transparent, QUARTER_REM)
  outline: solid transparent !important

  display: block
  width: 100%
  background: BLACK_FADE_MIN
  font-size: SMALLER_FONT
  padding: QUARTER_REM
  transition: BASE_TRANSITION

  &.isCompact
    padding: EIGHTH_REM

  &:not(.isDisabled):hover
    background: BLACK_FADE_FLY

  &.isToday,
  &:focus
    border-color: HIGHLIGHTS
    box-shadow: inset 0 0 0 1px HIGHLIGHTS

  &.isSelected,
  &.isSelected:hover
    background: HIGHLIGHTS
    color: WHITE

.qmDatePickerTimes
  padding: QUARTER_REM
  text-align: center
  flex-grow: 1

.qmDatePickerTimeTitle
  padding: 2px 0 // Using px here to align with table spacing

.qmDatePickerHours
  display: flex
  flex-wrap: wrap
  flex-flow: column
  max-height: REM * 9
  overflow-y: auto

  &.isCompact
    max-height: REM * 7.75

.qmDatePickerHour
  margin: plus(div(QUARTER_REM, 2), 1) auto 0
  min-width: REM * 4

