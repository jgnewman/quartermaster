@import "../lib/sharedStyles"

.qmRadioContainer
  @extend $vertMiddle
  padding: 0 HALF_GUTTER 0.33rem 0

.qmRadioLabel
  @extend $vertMiddle
  color: BASE_FONT
  transition: BASE_TRANSITION
  margin-right: 0.33rem

  &.isDisabled
    color: BASE_FONT_DISABLED

.qmRadioFauxWrapper
  @extend $vertMiddle

  &:hover .qmRadioLabel.isEnabled
    color: HIGHLIGHTS

.qmRadioCheckWrapper
  @extend $vertMiddle
  size(18px)

  position: relative
  margin-right: 0.33rem

.qmIcon.qmRadioDotIcon
  @extend $absCenter
  fill: WHITE

.qmRadioOverlay
  @extend $absFill
  borders(BASE_BORDER, 50%)

  background: BASE_BG
  outline: solid transparent !important
  overflow: hidden

  transition: BASE_TRANSITION
  box-shadow: BLANK_OUTLINE

  &.isChecked
    background: HIGHLIGHTS
    border-color: HIGHLIGHTS

  &.isFocused
    box-shadow: BASE_OUTLINE
    border-color: HIGHLIGHTS

.qmRadioNative
  display: block
  position: absolute
  left: -1000vw
  top: 0
  border: 0
