@import "../lib/sharedStyles"

.qmIconButtonEffect
  @extend $absCenter
  borders(0, 50%)

  width: 100%
  height: 100%
  z-index: 1

  background: BLACK_FADE_FLY
  transition: BASE_TRANSITION
  transform: translateX(-50%) translateY(-50%) scale(0)

.qmIconButtonContainer
  @extend $vertMiddle
  borders(0, 50%)

  background: transparent
  overflow: hidden
  transition: BASE_TRANSITION

  position: relative

  &:hover .qmIconButtonEffect
    transform: translateX(-50%) translateY(-50%) scale(1)

  &:active
    transform: scale(0.9)

  .qmButtonContainer.qmIconButton
    borders(0, 0)
    font-size: inherit
    display: block
    padding: 0.5em
    background: transparent
    height: auto

    position relative
    z-index: 2

    &.isFocused
      background: BLACK_FADE_FLY
