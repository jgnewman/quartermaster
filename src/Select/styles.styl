@import "../lib/sharedStyles"

.qmSelectContentWrapper
  display: block
  position: relative
  overflow: visible
  line-height: 1

.qmSelectClickableWrapper
  borders(BASE_BORDER, QUARTER_REM)
  height: LARGER_ELEM_HEIGHT

  display: flex
  align-items: stretch
  justify-content: space-between
  overflow: hidden

  background: BASE_BG
  box-shadow: BLANK_OUTLINE
  transition: BASE_TRANSITION

  outline: solid transparent !important

  &.isCompact
    height: SMALLER_ELEM_HEIGHT

  &.isFocused
    box-shadow: BASE_OUTLINE
    border-color: HIGHLIGHTS

.qmIcon.qmSelectOpenIcon,
.qmIcon.qmSelectClearIcon
  stroke: BASE_FONT_LIGHTER
  transition: BASE_TRANSITION

.qmSelectOpenIconWrapper,
.qmSelectClearIconWrapper
  display: block
  align-self: center
  position: relative

  padding: 0.5em 0.75em
  background: transparent
  border: 0;

  &.isEnabled:hover

    .qmIcon.qmSelectOpenIcon
      stroke: HIGHLIGHTS

    .qmIcon.qmSelectClearIcon
      stroke: RED

.qmSelectClearIconWrapper
  outline: solid transparent !important

  &.isEnabled:focus .qmIcon.qmSelectClearIcon
    stroke: RED

.qmSelectOpenIconWrapper::before
  content: ""
  display: block
  position: absolute
  left: 0
  top: 50%
  width: 1px
  height: 50%
  transform: translateY(-50%)
  background: LIGHTEST_GRAY

.qmSelectDisplay
  flex-grow: 1
  position: relative
  overflow: hidden
  color: BASE_FONT

  &.isPlaceholder
    color: BASE_PLACEHOLDER

  &.isDisabled
    color: BASE_PLACEHOLDER

    &.isPlaceholder
      color: BASE_FONT_DISABLED

.qmSelectValue
  @extend $ellipsisText

  display: block
  position: absolute
  top: 50%
  transform: translateY(-50%)

  max-width: 100%
  padding: 0 0 0 THREE_QUARTER_REM

.qmSelectMenu
  size(100%, auto)
  borders(BASE_BORDER, QUARTER_REM)

  display: block
  position: absolute
  left: 0
  top: "calc(100% - %s)" % (QUARTER_REM)
  z-index: 2

  overflow: hidden
  background: BASE_BG
  box-shadow: SUBTLE_SHADOW

.qmSelectMenuOption
  display: block
  background: BASE_BG
  color: BASE_FONT
  text-align: left
  padding: HALF_REM THREE_QUARTER_REM TWO_THIRD_REM
  transition: BASE_TRANSITION

  outline: solid transparent !important

  &.isSelected
    background: HIGHLIGHTS
    color: BASE_FONT_LIGHTEST

  &:hover,
  &:focus,
  &.isSelected:hover
    background: HIGHLIGHTS
    color: BASE_FONT_LIGHTEST
