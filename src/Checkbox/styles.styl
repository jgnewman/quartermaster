@import "../lib/sharedStyles"

.qmCheckboxContainer
  @extend $vertMiddle
  padding: 0 HALF_GUTTER THIRD_REM 0

.qmCheckboxLabel
  transition: BASE_TRANSITION
  margin-right: THIRD_REM

  &.isDisabled
    color: BASE_FONT_DISABLED

.qmCheckboxFauxWrapper
  @extend $vertMiddle

  &:hover .qmCheckboxLabel.isEnabled
    color: HIGHLIGHTS

.qmCheckboxCheckWrapper
  @extend $vertMiddle
  size(18px)

  position: relative
  margin-right: THIRD_REM

.qmCheckboxOverlay
  @extend $absFill
  borders(BASE_BORDER, QUARTER_REM)

  background: BASE_BG
  outline: solid transparent !important
  transition: BASE_TRANSITION
  box-shadow: BLANK_OUTLINE

  &.isChecked
    background: HIGHLIGHTS
    border-color: HIGHLIGHTS

  &.isFocused
    box-shadow: BASE_OUTLINE
    border-color: HIGHLIGHTS

.qmIcon.qmCheckboxCheckmark
  @extend $absCenter
  stroke: WHITE

.qmCheckboxNative
  display: block
  position: absolute
  left: -1000vw
  border: 0

