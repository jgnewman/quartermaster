@import "../lib/sharedStyles"

.qmButtonContent
  transition: BASE_TRANSITION
  color: BASE_FONT_LIGHTEST

.qmButtonContainer
  @extend $vertMiddle
  borders(0, 10rem)

  position: relative

  background: HIGHLIGHTS
  padding: 0.5rem 2.5rem 0.5rem
  height: LARGER_ELEM_HEIGHT

  line-height: 1em
  font-size: 90%

  transition: BASE_TRANSITION
  cursor: default
  opacity: 0.5
  outline: solid transparent !important

  .qmButtonSpinner
    position: absolute
    top: 50%
    left: 0.75rem
    margin-top: -10px

    border-color: WHITE_FADE_LIGHT
    border-top-color: WHITE

  &.isCompact
    height: SMALLER_ELEM_HEIGHT
    padding: 0.5rem 2rem 0.5rem

    .qmButtonSpinner
      left: 0.5rem
      margin-top: -8px

  &.isEnabled
    cursor: pointer
    opacity: 1

    &:hover
      background: HIGHLIGHTS_LIGHT

      .qmButtonContent
        color: BASE_FONT_LIGHTEST

  &.isPositive
    background: GREEN

    &.isEnabled:hover
      background: GREEN_LIGHT

  &.isNegative
    background: RED

    &.isEnabled:hover
      background: RED_LIGHT

  &.isDisabled
    opacity: 0.5

  &.isEnabled.isFocused
    transform: scale(1.1)

  &.isEnabled:active
    transform: scale(0.95)

