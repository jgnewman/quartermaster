@import "../lib/sharedStyles"

.qmModalContainer
  @extend $fixFill

  z-index: 9999
  background: DARK_BG
  transform: scale(0)
  opacity: 0
  transition: opacity .3s ease, transform 1s ease

  &.isOpen
    transition: transform .3s ease, opacity .5s ease
    transform: scale(1)
    opacity: 1

.qmModalContent
  display: block
  max-width: 100%

  position: absolute
  left: 50%
  top: 40%
  transform: translateX(-50%) translateY(-50%)

  text-align: center
  letter-spacing: 0

.qmModalCloseWrapper
  position: fixed;
  right: 0
  top: 0
  z-index: 9999

  padding: 1rem

  .qmIconButtonEffect
    background: rgba(LIGHT_FONT, 0.1)

  .qmIcon
    fill: LIGHT_FONT